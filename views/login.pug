extends layout

block content
    .container.sign-container.d-flex.justify-content-center.flex-column
        div.row.d-flex.justify-content-center.align-items-center.bg-white.p-5
            .col-12.mt-4.d-flex.justify-content-center.flex-column
                h1.text-center.mt-4.font-weight-bold.text-primary Логин
                .col-md-6.col-12.align-self-center
                    form(action='/login' method='POST').mt-4.mx-1.mx-md-4
                        div.d-flex.flex-row.align-items-center.mb-4.text-primary
                            i.fa.fa-user.fa-lg.me-3.fa-fw.pr-2
                            .form-outline.flex-fill.mb-0
                                input.form-control(type='text', name='username' autofocus=true placeholder='Почта' required)
                        div.d-flex.flex-row.align-items-center.mb-4.text-primary 
                            i.fa.fa-lock.fa-lg.me-3.fa-fw.pr-2
                            .form-outline.flex-fill.mb-0
                                input.form-control(type='password', name='password' placeholder='Пароль' required)
                        div.d-flex.justify-content-center
                            input(type='submit', value='Войти').btn.signBtn.m-4
                        div.d-flex.justify-content-center
                            a(href="/signup").text-primary.contacts Создать аккаунт
            if(err)
                div.mt-4 
                    p.text-danger.contacts Ошибка: #{err} 
        
        


