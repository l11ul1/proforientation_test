extends layout

block content
    h1 You Have Finished the Test with the following result:
    canvas#myChart(style='width:100%;max-width:600px')
    script.
        var xValues = ["category A", "Category B", "Category C", "Category D", "Category E"];
        var yValues = [parseInt("#{rightA}"), parseInt("#{rightB}"), parseInt("#{rightC}"), parseInt("#{rightD}"), parseInt("#{rightE}")];
        var barColors = ["red", "green","blue","orange","brown"];

        new Chart("myChart", {
        type: "bar",
        data: {
            labels: xValues,
            datasets: [{
            backgroundColor: barColors,
            data: yValues
            }]
        },
        options: {
            legend: {display: false},
            title: {
            display: true,
            text: "Test Results By Section"
            }
        }
        });