extends layout

block content
    div#question-body-wrapper
        #question-body-overlay
        .col.d-flex.justify-content-center.flex-column.flex-md-row
            .col-12.col-md-8.col-xl-9#questionWrapper.d-flex
                .col.d-flex.flex-column.p-5
                    div
                        h1.text-center.py-4.questions__question #{question.question_body}
                    #question-answers.text-secondary.p-5.bg-white.rounded
                        form(method="POST", action='/questions/nextQuestion').w-100
                            each answer, i in question.question_answers
                                .option.form-check#customRadioButton.py-2.my-1.rounded-bottom
                                    input(type='radio', name='answer', value=answer, id=i).form-check-input
                                    label(for=i).option-name.px-2.form-check-label 
                                        p.font-weight-light #{answer}
                            input(type='submit' value='Следующий вопрос').my-4.main-color-inversed.btn
            .col-12.col-md-4.col-xl-3#digitalMarketing.d-flex.flex-column
                #digitalMarketingOverlay
                .col.d-flex.flex-column.justify-content-center
                    div#headingDigitalMarketing
                        h5.text-center Секция
                        h2.question-section_title.text-center 
                            if (question.question_category == "Design")
                                u Графический дизайн
                            if (question.question_category == "Math")
                                u Mатематика
                            if (question.question_category == "Physics")
                                u Физика
                            if (question.question_category == "Marketing")
                                u Digital Marketing
                            if (question.question_category == "Chop")
                                u ЧОП
                            
                    div#sidebarButtons.align-center.d-flex.row.m-2
                        a(href='/profile').col-12.btn.h2.main-color.nav-p.w-100  Прекратить тест
                        a(href='#').col-12.btn.h2.main-color.nav-p.w-100  FAQ по прохождению
                
    
